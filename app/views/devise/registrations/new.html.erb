<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-container"}) do |f| %>
  <h2>Inscription</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label "Prénom" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "Prénom", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Nom" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Nom", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Description" %><br />
    <%= f.text_field :description, autofocus: true, autocomplete: "Description", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Mot de passe"%>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Confirmez votre mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="form-actions">
    <%= f.submit "S'inscrire", class: "btn-orange text-white" %>
  </div>

<% end %>